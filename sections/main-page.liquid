<section class="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="page">
  {% style %} 
    .{{section.id}} .container.container--narrow { max-width: 1480px; text-align: left; } 
    .{{section.id}} .page__header { display: block; text-align: left; margin-bottom: 20px; } 
    .{{section.id}} .page__header .page__title { font-size: 40px !important; } 
    .{{section.id}} .page__content { margin-bottom: 45px; }
    .{{section.id}} .main-page-contaiter * { padding: 0px !important; }
    {% endstyle %}
  <div class="container container--narrow main-page-contaiter">
    <header class="page__header page__header--centered page__header--stack">
      <h1 class="page__title heading h1">{{ page.title }}</h1>

      {%- if page.content != blank and page.template_suffix == 'contact' or page.template_suffix == 'team' -%}
        <div class="page__description rte">
          {{ page.content }}
        </div>
      {%- endif -%}
    </header>

    {%- if page.content != blank and page.template_suffix != 'contact' and page.template_suffix != 'team' -%}
      <div class="page__content rte">
        {{ page.content }}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Page"
}
{% endschema %}